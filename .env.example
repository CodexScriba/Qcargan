# Supabase
# Public (safe to expose to the browser)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# Prefer publishable/anon key (supports either legacy anon JWT or sb_publishable_... keys)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=YOUR_PUBLIC_SUPABASE_KEY
# Back-compat: some code reads this directly
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PUBLIC_SUPABASE_KEY

# Server-only (NEVER expose to the browser)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Database (server-only)
# Used by drizzle + scripts (typically a pooled/transaction pooler URL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require
# Optional: direct/non-pooled URL (useful for migrations)
DIRECT_URL=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require

# Site URL (used for auth email redirects)
# In production, set to your actual domain (e.g., https://example.com)
# Vercel automatically sets VERCEL_URL which is used as fallback
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_YOUR_POSTHOG_PROJECT_KEY
